{
  "version": "0.2.0",
  "configurations": [
		{
			"type": "cppvsdbg",
			"request": "launch",
			"name": "Windows",
			"cwd": "${workspaceFolder}/bazel-bin/cli",
			"program": "${workspaceFolder}/bazel-bin/cli/ecsact-rtb.exe",
			"args": [
				"C:/projects/seaube/ecsact-net-unity-example/Assets/example.ecsact",
				"--output=C:/projects/seaube/ecsact-net-unity-example/Assets/Plugins/ecsact.dll",
				"--temp_dir=${workspaceFolder}\\tmp"
			],
			"preLaunchTask": "Build"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Linux",
			"cwd": "${workspaceFolder}/bazel-bin/cli",
			"program": "${workspaceFolder}/bazel-bin/cli/ecsact-rtb",
			"args": [
				"${workspaceFolder}/dummy.ecsact",
				"--output=${workspaceFolder}/tmp/test_runtime.so",
				"--temp_dir=${workspaceFolder}/tmp"
			],
			"preLaunchTask": "Build"
		}
	]
}
